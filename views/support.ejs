<%- include("partials/header") %>
<section id="support">
    <!-- modal  -->
    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title text-center">Added to your cart!</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-dark">Open my Cart</button>
                </div>
            </div>
        </div>
    </div>
    
        
    <!-- Donate section  -->
        <div class="donate">
          <div class="donate-black">
            <h2><span>$</span> Donate</h2>
            <p>Your contribution is vital to the success of our initiative.<br>Choose the amount you wish to donate with PayTM, as one-time or monthly payment. </p>
          </div>
          <div class="donate-blue">
            <h3>Donation amount*</h3>
            <div class="donate-amount-box">
              <div class="donate-amount">
                <div class="denomination selected">
                  <input autocomplete="off" type="radio" name="amount" id="amount5" value="5" checked="">
                  <label for="amount5">₹5</label>
                </div>
                <div class="denomination">
                  <input autocomplete="off" type="radio" name="amount" id="amount10" value="10">
                  <label for="amount10">₹10</label>
                </div>
                <div class="denomination">
                  <input autocomplete="off" type="radio" name="amount" id="amount15" value="15">
                  <label for="amount15">₹15</label>
                </div>
                <div class="denomination">
                  <input autocomplete="off" type="radio" name="amount" id="amount25" value="25">
                  <label for="amount25">₹25</label>
                </div>
                <div class="denomination">
                  <input autocomplete="off" type="radio" name="amount" id="amount50" value="50">
                  <label for="amount50">₹50</label>
                </div>
                <div class="denomination">
                  <input autocomplete="off" type="radio" name="amount" id="amount100" value="100">
                  <label for="amount100">₹100</label>
                </div>
              </div>
              <div class="denomination-other">
                  <input autocomplete="off" type="text" name="amount" value="" placeholder="Enter Other Amount">
                </div>
            </div>
          </div>
        
          <div class="donate-blue donate-payment">
            <h3>Payment Method</h3>
            <div>
              <label>
                <input type="radio" name="payment" value="PayTM" checked="checked" autocomplete="off">PayTM
              </label>
              <label>
                <input type="radio" name="payment" value="crypto" autocomplete="off">Google Pay
              </label>
            </div>
            <div class="donate-submit">
              <button type="submit" autocomplete="off">Donate ₹5</button>
              <p><small>Please note that contributions are not tax-deductible.</small></p>
            </div>
          </div>
        </div>

        
        <!-- card  -->
       <div class="row">
    
         <div class="col-xl-3 col-lg-6">
          <div class="wrapper1">
            <div class="container1">
              <div class="top">
                <img src="https://picsum.photos/200/260" alt="" class="itemImage">
              </div>
              <div class="bottom" id="bottom">
                <div class="left">
                  <div class="details">
                    <h1 class="productName">Item</h1>
                    <p class="productPrice">₹250</p>
                  </div>
                  <div class="buy" id="buy" title="Add to your cart!" data-toggle="modal" data-target="#myModal"><i class="material-icons">add_shopping_cart</i></div>
                </div>
                <div class="right">
                  <div class="done"><i class="material-icons">clear</i></div>
                  <div class="details">
                    <h2 class="productName">Item</h2>
                    <p>Added to your cart</p>
                  </div>
                  <div class="remove" id="remove"><i class="material-icons">clear</i></div>
                </div>
              </div>
            </div>
            <div class="inside">
              <div class="icon"><i class="material-icons">info_outline</i></div>
              <div class="contents">
                <h2>Description:</h2>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.
                   Dignissimos repellendus excepturi quia omnis, numquam maiores ut?
                    Laborum, id sint. Expedita.</p>
              </div>
            </div>
          </div>
         </div>
       </div>
        
</section>
<%- include("partials/footer") %>